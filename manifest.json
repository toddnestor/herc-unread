{
  "manifest_version": 2,
  "name": "Herc Unread",
  "description": "Get the unread message count in the window title like they have over on Gmail",
  "version": "1.0.1",
  "icons": {
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://inbox.google.com/*"
      ],
      "js": [
        "lib/jquery-2.1.1.min.js",
        "js/inbox.js"
      ],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "https://mail.google.com/mail/feed/atom"
  ]
}